{
  "name": "@gdg-fsc/interface",
  "version": "1.0.0",
  "description": "Shared UI component library for GDG FSC projects",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "default": "./dist/ui/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "bunx biome check --write ./",
    "storybook": "storybook dev -p 6007",
    "build:storybook": "storybook build",
    "chromatic": "bun run build:storybook && bunx chromatic --storybook-build-dir=storybook-static --exit-zero-on-chromatic-error --auto-accept-changes"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "gdg-fsc"
  ],
  "author": "GDG on Campus Farmingdale State College",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@gdg-fsc/shared": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
